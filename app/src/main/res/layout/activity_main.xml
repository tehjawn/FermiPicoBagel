<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#AAAACC"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press button to generate number between 100-999"
        android:id="@+id/buttonPressInfo"
        android:textColor="#114444"
        android:layout_marginBottom="25px"
        android:layout_marginTop="15px"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Random Number"
        android:id="@+id/rngButton"
        android:layout_margin="15px"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Random Number Has Not Been Generated Yet)"
        android:id="@+id/rngIndicator"
        android:layout_margin="15px"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:padding="5px"
        android:id="@+id/userGuess"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25px"
        android:layout_marginBottom="25px"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:background="#DDDDDD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check!"
        android:id="@+id/checkButton"
        android:layout_marginBottom="15px"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Check + Hints)"
        android:id="@+id/hint"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
